{
  "name": "subtitle-burner",
  "version": "1.0.0",
  "author": "Kai Sellgren <kaisellgren@gmail.com>",
  "description": "Burn subtitles onto video files. This makes it easier to Chromecast videos with subtitles.",
  "homepage": "https://github.com/kaisellgren/subtitle-burner",
  "repository": "https://github.com/kaisellgren/subtitle-burner",
  "license": "ISC",
  "main": "dist/main/main.js",
  "type": "commonjs",
  "scripts": {
    "build": "NODE_ENV=production rspack build",
    "package": "electron-builder --linux",
    "start": "NODE_OPTIONS='' electron dist/main/main.js -- --no-sandbox",
    "serve:frontend": "rspack serve",
    "watch:backend": "rspack build -w",
    "dev": "concurrently \"npm run serve:frontend\" \"npm run watch:backend\""
  },
  "build": {
    "appId": "com.kaisellgren.subtitleburner",
    "productName": "Subtitle Burner",
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Utility",
      "icon": "src/assets/icons/icon-256x256.png"
    },
    "deb": {
      "depends": [
        "ffmpeg",
        "libgtk-3-0",
        "libnotify4",
        "libxapp1",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils",
        "libatspi2.0-0",
        "libuuid1",
        "libsecret-1-0",
        "libasound2"
      ]
    },
    "files": [
      "dist/main/**/*",
      "dist/preload/**/*",
      "dist/renderer/**/*",
      "dist/assets/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "screenshots/screenshot.jpg",
        "to": "usr/share/doc/subtitle-burner/screenshot.jpg"
      },
      {
        "from": "src/assets/appstream/appdata.xml",
        "to": "usr/share/metainfo/com.kaisellgren.subtitleburner.appdata.xml"
      }
    ],
    "asar": true
  },
  "dependencies": {
    "@fontsource/roboto": "^5.1.1",
    "@mui/icons-material": "^6.4.5",
    "@mui/material": "^6.4.4",
    "@mui/styled-engine-sc": "^6.4.3",
    "@mui/system": "^6.4.3",
    "chalk": "^5.4.1",
    "date-fns": "^4.1.0",
    "koa": "2.15.4",
    "koa-bodyparser": "^4.4.1",
    "koa-router": "13.0.1",
    "koa-static": "^5.0.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "styled-components": "^6.1.15",
    "typescript": "5.5.4",
    "valtio": "^2.1.3",
    "zx": "8.1.4"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@rspack/cli": "1.2.3",
    "@rspack/core": "1.2.3",
    "@rspack/dev-server": "^1.0.10",
    "@types/jest": "29.5.12",
    "@types/koa": "2.15.0",
    "@types/koa-router": "7.4.8",
    "@types/koa-static": "4.0.4",
    "@types/node": "20.14.8",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "app-builder-lib": "^26.0.12",
    "concurrently": "^9.1.2",
    "electron": "34.2.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "tsx": "^4.19.2"
  }
}
